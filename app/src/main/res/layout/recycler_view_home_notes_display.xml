<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/NotesView"
        android:layout_width="347dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/text_view_design"
        android:hint="@string/type_your_note_here"
        android:textSize="22sp"
        android:inputType="text"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editPen"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginStart="244dp"
        app:layout_constraintBottom_toBottomOf="@+id/NotesView"
        app:layout_constraintStart_toStartOf="@+id/NotesView"
        app:layout_constraintTop_toTopOf="@+id/NotesView"
        app:srcCompat="@drawable/edit" />

    <ImageView
        android:id="@+id/deletePen"
        android:layout_width="36dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/editPen"
        app:layout_constraintEnd_toEndOf="@+id/NotesView"
        app:layout_constraintStart_toEndOf="@+id/editPen"
        app:layout_constraintTop_toTopOf="@+id/editPen"
        app:srcCompat="@drawable/trash" />

</androidx.constraintlayout.widget.ConstraintLayout>